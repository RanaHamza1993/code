<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.audio.AudioFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/audio_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/player_icon"
        android:layout_width="@dimen/player_icon_size"
        android:layout_height="@dimen/player_icon_size"
        android:background="@drawable/ic_video_blue"
        android:layout_margin="@dimen/player_icon_margin"
        android:layout_gravity="bottom|right"
        />
    <com.eyalbira.loadingdots.LoadingDots
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loading"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:LoadingDots_auto_play="true"
        app:LoadingDots_dots_size="30dp"
        app:LoadingDots_dots_space="5dp"
        android:visibility="gone"/>

</FrameLayout>
