<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/folder_item"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/folder_icon"
                android:layout_width="@dimen/folder_item_icon_width"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/folder_item_icon_height"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@drawable/ic_folder"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/text_layout"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/folder_item_vertical_margin"
            android:paddingBottom="@dimen/folder_item_vertical_margin"
            android:paddingRight="@dimen/folder_item_horizontal_margin"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/folder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/folder_item_name_textsize">
            </TextView>
            <LinearLayout
                android:id="@+id/layout_new"
                android:layout_toRightOf="@+id/folder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:background="@color/colorNewRed"
                android:padding="@dimen/margin_2unit"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEW"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/new_name_textsize"/>
            </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/folder_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin_2unit"
                android:text="12 files"
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/folder_item_count_textsize">
            </TextView>
        </LinearLayout>

</LinearLayout>