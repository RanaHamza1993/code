<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_options_bottom"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:elevation="100dp"
    android:background="@color/colorTextGrey"
    android:gravity="center_vertical"
    android:layout_height="@dimen/bottom_tabs_height"
    android:weightSum="5">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <ImageView
            android:id="@+id/button_delete"
            android:layout_width="@dimen/delete_button_width"
            android:layout_height="@dimen/delete_button_height"
            android:background="@drawable/ic_delete"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <ImageView
            android:id="@+id/button_rename"
            android:backgroundTint="@drawable/bottom_option_background_tint"
            android:layout_width="@dimen/bottom_button_size"
            android:layout_height="@dimen/bottom_button_size"
            android:background="@drawable/ic_edit"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/button_details"
            android:backgroundTint="@drawable/bottom_option_background_tint"
            android:layout_width="@dimen/bottom_button_size"
            android:layout_height="@dimen/bottom_button_size"
            android:background="@drawable/ic_info"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/button_share"
            android:layout_width="@dimen/bottom_button_size"
            android:layout_height="@dimen/bottom_button_size"
            android:background="@drawable/ic_share"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/button_favorite"
            android:layout_width="@dimen/bottom_button_size"
            android:layout_height="@dimen/bottom_button_size"
            android:background="@drawable/ic_favorite_white"/>
    </LinearLayout>

</LinearLayout>